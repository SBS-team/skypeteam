- if @start_date
  %ul.pager
    - if prev_date = @workday.prev_date
      %li.next
        %a{:href => workday_path(@start_date)} ← Читать с начала

= render :partial => "page"

%ul.pager
  - if prev_date = @workday.prev_date
    %li.previous
      %a{:href => workday_path(prev_date)} ← Предыдущий день
.clear
= render :partial => "comments"
